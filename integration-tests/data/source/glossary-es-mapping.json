{
    "settings": {
      "index": {
       "number_of_shards": "1",
        "analysis": {
          "filter": {
            "autocomplete_filter": {
              "type": "edge_ngram",
              "min_gram": 3,
              "max_gram": 30,
              "token_chars": [
                "letter",
                "digit",
                "punctuation",
                "symbol"
              ]
            },
            "ngram_filter": {
              "type": "ngram",
              "min_gram": 1,
              "max_gram": 30,
              "token_chars": [
                "letter",
                "digit",
                "punctuation",
                "symbol"
              ]
            }
          },
          "analyzer": {
            "autocomplete_index": {
              "type": "custom",
              "tokenizer": "whitespace",
              "filter": [
                "lowercase",
                "autocomplete_filter",
                "asciifolding"
              ]
            },
            "lowercase_search": {
              "tokenizer": "keyword",
              "filter": [
                "lowercase",
                "asciifolding"
              ]
            },
            "ngram_analyzer": {
              "type": "custom",
              "tokenizer": "whitespace",
              "filter": [
                "lowercase",
                "ngram_filter",
                "asciifolding"
              ]
            }
          },
          "normalizer": {
            "caseinsensitive_normalizer": {
              "type": "custom",
              "char_filter": [

              ],
              "filter": [
                "lowercase",
                "asciifolding"
              ]
            }
          }
        }
      }
    },
    "mappings": {
      "terms": {
        "dynamic": "strict",
        "properties": {
          "term_id": {
            "type": "long"
          },
          "language": {
            "type": "keyword"
          },
          "dictionary": {
            "type": "keyword"
          },
          "audience": {
            "type": "keyword"
          },
          "term_name": {
            "type": "keyword",
            "normalizer": "caseinsensitive_normalizer",
            "fields": {
              "_autocomplete": {
                "type": "text",
                "analyzer": "autocomplete_index",
                "search_analyzer": "lowercase_search"
              },
              "_contain": {
                "type": "text",
                "analyzer": "ngram_analyzer",
                "search_analyzer": "lowercase_search"
              }
            }
          },
          "first_letter": {
            "type": "keyword",
            "normalizer": "caseinsensitive_normalizer"
          },
          "pretty_url_name": {
